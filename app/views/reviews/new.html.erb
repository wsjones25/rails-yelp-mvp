<h1 class="text-center">Write your review</h1>
<div class="container">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.submit "Create Review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
